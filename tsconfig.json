{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"target": "es2015",
		"strict": true,
		"outDir": "./lib",
		"preserveConstEnums": true,
		"removeComments": true,
		"inlineSourceMap": true,
		"typeRoots": [
			"./types/",
			"./node_modules/@types"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*-spec.ts"
	]
}
